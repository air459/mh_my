// 编译: gcc -o ram_fill ram_fill.c
#include <stdlib.h>
#include <stdio.h>
#include <unistd.h>

int main() {
    size_t mb = 1024 * 1024;
    int i = 0;
    char *ptr;
    
    while(1) {
        ptr = malloc(mb);
        if(ptr == NULL) break;
        for(size_t j = 0; j < mb; j++)
            ptr[j] = rand() % 256;
        i++;
        printf("已分配: %d MB\n", i);
        sleep(1);
    }
    return 0;
}

